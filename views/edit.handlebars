<!doctype html>

<html>

<div class="container">
<head>
	<script src="/js/jquery-1.11.0.js"></script>
	<script src="/js/bootstrap.js"></script>
	<link href="/css/bootstrap.css" rel="stylesheet">
	<link href="/css/bootstrap-theme.css" rel="stylesheet">
	<link href="/css/style.css" rel="stylesheet">
	<title>WarmUp Profile</title>	
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
</head>

<body>
	{{#each users}}
	<form id="editProfile" role="form" method="get" action="/editUser">
		<h3>Edit profile</h3>
	    <div class="form-group">
	      <label for="name">Name:</label>
	      <input type="text" class="form-control" id="name" placeholder="Name" name="name" value="{{name}}">
	    </div>

	    <div class="form-group">
	      <label for="gender">Gender:</label>
	      <input type="text" class="form-control" id="gender" placeholder="Gender" name="gender" value="{{gender}}">
	    </div>

	    <div class="form-group">
	      <label for="height">Height:</label>
	      <input type="text" class="form-control" id="height" placeholder="Height" name="height" value={{height}}>
	    </div>

<div class="form-group">
	      <label for="weight">Weight:</label>
	      <input type="text" class="form-control" id="weight" placeholder="Weight" name="weight" value="{{weight}}">
	    </div>

	    <input type="submit" id="submitButton" class="btn btn-default" value="Save Changes"></input>
	</form>
	{{/each}}
</body>
</div>
</html>
