<body> 
    <div class="container">
<h2 style="font-size: 72;"> Welcome to WarmUp!</h2>
<div class="container">
<br>
</div>
<h2 class="center"> Login here:</h2>
</div>
<br>

<div class="center">
  <div id="facebookPhoto" class="profile"></div>
  <!--<form method="post">-->
  <form method="get" action="/survey">

    <div class="container">
      <label for="username"><b>Username</b></label>
      <input type="text" placeholder="Enter Username" name="uname" required>
    </div>
      <div class="container">
      <label for="password"><b>Password</b></label>
      <input type="password" placeholder="Enter Password" name="psw" required>
    </div>
    <div class="container">
      <button type="Submit" onclick="checkLogin()">Login</button>
      <label>
        <input type="checkbox" checked="checked" name="remember"> Remember me
      </label>

     <fb:login-button scope="public_profile,email" onlogin="checkLoginState();"></fb:login-button>

    </div>

  </form>

   <div class="container">
    <a href="newuser">Create An Account</a>
  </div>
</div>


<script src="https://www.gstatic.com/firebasejs/7.9.0/firebase-app.js"></script>
